<!-- Attribut 'for': Jahr (vierstellig-), für welches der Plan erstellt wird (Pflichtattribut).
     Optional: start-date / end-date. Format start- / end-date: yyyy-MM -->
<shiftplan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="shiftplan.xsd" for="2024" start-date="2024-04" end-date="2024-12">

    <!-- Öffentliche Feiertage. Es sollten zumindest solche Feiertage angegeben werden, die auf einen Werktag fallen.
         Das Attribut 'name' ist optional, Datumsangabe im 'date'-Attribut: ISO-Format (yyyy-MM-dd) -->
    <public-holidays>
        <holiday name="Neujahr" date="2024-01-01"/>
        <holiday name="Karfreitag" date="2024-03-29"/>
        <holiday name="Ostermontag" date="2024-04-01"/>
        <holiday name="Tag der Arbeit" date="2024-05-01"/>
        <holiday name="Christi Himmelfahrt" date="2024-05-09"/>
        <holiday name="Pfingstmontag" date="2024-05-20"/>
        <holiday name="Fronleichnam" date="2024-05-30"/>
        <holiday name="Tag der dt. Einheit" date="2024-10-03"/>
        <holiday name="Heiligabend" date="2024-12-24"/>
        <holiday name="1. Weihnachtstag" date="2024-12-25"/>
        <holiday name="2. Weihnachtstag" date="2024-12-26"/>
        <holiday name="Sylvester" date="2024-12-31"/>
    </public-holidays>

    <shift-policy>
        <late-shift-period>4</late-shift-period> <!-- Anzahl der fortlaufenden Spätschichttage -->
        <!-- Tage an denen keine Spätschicht vorgesehen ist (z.B. montags), Wochentage von Montag bis Freitag auf Englisch in Großschrift, optional -->
        <no-lateshift-on>MONDAY</no-lateshift-on>
        <!--<no-lateshift-on>TUESDAY</no-lateshift-on>-->
        <max-home-per-month>10</max-home-per-month> <!-- Maximale Anzahl von Homeoffice-Tagen pro Monat -->
        <ho-credits-per-employee>3</ho-credits-per-employee> <!-- Max. Anzahl von HO-Tagen pro Woche -->
        <max-ho-slots-per-day>3</max-ho-slots-per-day> <!-- Maximale Anzahl von MA's, die an einem Tag von zu Hause arbeiten-->
        <max-successive-ho-days>2</max-successive-ho-days> <!-- Maximale Anzahl aufeinanderfolgender HO-Tage eines MA's-->
        <!-- Mindestanzahl von Tagen, für die ein MA nach einer festgelegten Anzahl von aufeinanderfolgenden HO-Tagen für
             eine weitere HO-Einteilung gesperrt ist
         -->
        <min-distance-between-ho-blocks>2</min-distance-between-ho-blocks>
    </shift-policy>

    <!-- Hinweis zur Konfiguration von Backups: Backups müssen reziprok erfasst werden. Wenn Mitarbeiter A einen
         Mitarbeiter B als Backup einträgt, muss Mitarbeiter B wiederum den Mitarbeiter A als Backup aufführen;
